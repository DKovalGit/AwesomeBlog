@using AwesomeBlog.BLL.ViewModels
@model EditRoleViewModel
@{
    ViewBag.Title = "Редактирование роли";
}
<form asp-action="EditRole" asp-controller="Roles">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Comment" class="control-label">Описание</label>
        <input type="text" asp-for="Comment" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>